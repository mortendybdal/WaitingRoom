.delete-item-modal
    .item-modal__header {{d.GENERAL_Delete}} {{user.name}}

    .item-modal__content

        .item-modal__text {{d.MODAL_AreYouSure}} <b>"{{user.name}}"</b>


        .item-modal__buttons
            button.item-modal__create-button(ng-click="delete(user)")
                span {{d.GENERAL_Delete}} {{type}}
                .element-loader__container(ng-class="{fade: is_loading}")
                    .element-loader
            button.item-modal__cancel-button(ng-click="close()") {{d.GENERAL_Cancel}}