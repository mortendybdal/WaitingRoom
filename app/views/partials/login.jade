.login(ng-hide="is_logged_in")
    .login-box


        form.form(name='form', novalidate='novalidate')
            .login-box__header {{d.GENERAL_CompanyName}}

            .form-group
                label {{d.LOGIN_Email}}
                input.form-control(type='text', name='email', ng-model='user.email', ng-keypress="onKeyPressed(form, $event)")

            .form-group
                label {{d.LOGIN_Password}}
                input.form-control(type='password', name='password', ng-model='user.password', ng-keypress="onKeyPressed(form, $event)")

            .form-group.has-error
                p.help-block(ng-show='form.email.$error.required && form.password.$error.required && submitted')
                  | {{d.LOGIN_PleaseEnter}}
                p.help-block {{ errors.other }}

        button(ng-click='login(form)')  {{d.LOGIN_SignIn}}